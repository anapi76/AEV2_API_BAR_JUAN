{% extends "layout.html.twig" %}

{% block content %}

    {% if resultados is null or resultados is empty %}
        0 results
        <h4>{{title1}}</h4>
        <p><a href="/stock">Volver</a></p>
    {% else %}
        <h4>{{title1}}</h4>
        <table cellpadding="5">
            <tr>
                <th>IdProducto</th>
                <th>Nombre producto</th>
                <th>Fecha</th>
                <th>Cantidad</th>
            </tr>
        {% for row in resultados %}
            <tr>
                <td>{{row.getProducto().getIdProducto()}}</td>
                <td>{{row.getProducto().getNombre()}}</td>
                <td>{{row.getFecha()|date('d-m-Y H:i:s')}}</td>
                <td>{{row.getCantidad()}}</td>
            </tr>
        {% endfor %}
        <form action="" method="post">
            <p>Introduce la fecha: <input type="date" name="fecha" value='{{now|date('Y-m-d')}}'></p>
            <p><input type="submit" value="Buscar"> </p>
        </form>
        </table>
        <p class="button"><a href="/">Volver</a></p>
    {% endif %}

{% endblock %}